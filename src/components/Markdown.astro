---
import { Marked } from 'marked';
import markedShiki from 'marked-shiki';
import { getHighlighter, type Highlighter } from 'shiki';

interface Props {
    content: string;
    class?: string;
}

const { content, class: className } = Astro.props;

const highlighter = await getMarkdownHighlighter();
const html = await new Marked()
    .use(
        markedShiki({
            highlight(code, lang, props) {
                return highlighter.codeToHtml(code, {
                    lang,
                    theme: 'min-dark'
                });
            }
        })
    )
    .parse(content);

async function getMarkdownHighlighter(): Promise<Highlighter> {
    const globalWithCache = globalThis as typeof globalThis & {
        __markdownHighlighterPromise?: Promise<Highlighter>;
    };

    if (!globalWithCache.__markdownHighlighterPromise) {
        // `getHighlighter` is async, it initializes the internal and
        // loads the languages and themes specified. Cache the promise so
        // subsequent renders reuse the same highlighter instance instead
        // of instantiating a new one each time.
        globalWithCache.__markdownHighlighterPromise = getHighlighter({
            langs: ['jsx', 'js'],
            themes: ['min-dark']
        });
    }

    return globalWithCache.__markdownHighlighterPromise;
}
---

<div class:list={['markdown', className]} set:html={html} />
